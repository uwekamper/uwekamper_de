{% extends "base.j2" %}

{% block main -%}
<div class="row">
	<div class="span9">
		<article class="post">
			<h1 class="title">{{ resource.meta.title }}</h1>
			<time datetime="{{ resource.meta.created.strftime('%Y-%m-%d') }}">
			    <i class="icon-calendar"></i> {{ resource.meta.created.strftime('%a, %d %b %Y') }}
			</time>

			{% if resource.meta.tags %}
			<ul class="tags clear">
			<!-- {% for tag in resource.meta.tags %}
			<li>
			    <a class="small" href="{{ content_url('blog/tags/'~tag~'.html') }}">
			        {{ tag }}
			    </a>
			</li>
			{% endfor %} -->
			</ul>
			{% endif %}
			{% filter markdown|typogrify -%}
			{% mark post -%}
			{% block post -%}{%- endblock %}
			{%- endmark %}
			{%- endfilter %}
		</article>
	</div>
	<div class="span3">
		<div rel="author" id="author" class="well">
			<h4>About the Author</h4>
			<img rel="author" src="{{ media_url('img/avatar_500.jpg') }}" width="180" />
			<p>Uwe Kamper is a freelance software developer from Berlin, Germany. To find out more about him, please
			visit <a href="http://uwekamper.de/">http://uwekamper.de/</a>.</p>
		</div>
	</div>
</div><!-- /row -->
{%- endblock %}